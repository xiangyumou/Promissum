# Promissum Environment Configuration
# Template for .env file

# =========================
# Shared Secrets
# =========================
# The master token used for securing the Chaster API.
API_TOKEN=your_secure_random_token_here

# =========================
# Application Configuration (Next.js)
# =========================
# URL of the Chaster API.
# Internal Docker network: http://chaster:3000/api/v1 (Default)
# Local development: http://localhost:3000/api/v1
# CHASTER_API_URL=http://localhost:3000/api/v1

# Public URL of the main application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =========================
# Database Configuration
# =========================
DATABASE_URL="file:./dev.db"

# PostgreSQL Configuration (For Chaster Docker Service)
POSTGRES_USER=chaster
POSTGRES_PASSWORD=chaster_password
POSTGRES_DB=chaster

# =========================
# Service Configuration (Chaster)
# =========================
RATE_LIMIT_MAX=100
MOCK_DRAND=true
